    Assert.isTrue(BigInt.zero.isZero());
    Assert.isTrue(b == 1);
    Assert.isTrue(c == 1);
    Assert.isTrue(d == 1);
    Assert.isTrue(e == 1);
    Assert.isTrue(a == 0);
